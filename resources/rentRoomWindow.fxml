<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<TitledPane xmlns:fx="http://javafx.com/fxml/1" animated="false" contentDisplay="CENTER" maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" text="Rent Room"
            xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="io.github.shaquu.warehouse.gui.controller.RentRoomController">
    <AnchorPane>
        <VBox alignment="CENTER" spacing="4.0">
            <HBox alignment="CENTER" spacing="5.0">
                <Label alignment="CENTER" prefWidth="80.0" text="for days"/>
                <TextField fx:id="forDaysLbl" alignment="CENTER" prefWidth="150.0"/>
            </HBox>
            <ButtonBar>
                <buttons>
                    <Button fx:id="rentBtn" mnemonicParsing="false" onAction="#rentBtnAction" text="Rent"/>
                    <Button fx:id="closeBtn" layoutX="185.0" layoutY="17.0" mnemonicParsing="false"
                            onAction="#closeBtnAction" text="Close"/>
                </buttons>
            </ButtonBar>
        </VBox>
    </AnchorPane>
</TitledPane>
