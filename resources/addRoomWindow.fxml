<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TitledPane xmlns:fx="http://javafx.com/fxml/1" animated="false" contentDisplay="CENTER" maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" text="Add Room"
            xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="io.github.shaquu.warehouse.gui.controller.AddRoomController">
    <AnchorPane>
        <VBox alignment="CENTER" spacing="4.0">
            <TabPane tabClosingPolicy="UNAVAILABLE">
                <Tab text="x * y * z" fx:id="xyzTab">
                    <AnchorPane>
                        <VBox spacing="10.0">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <HBox alignment="CENTER" spacing="5.0">
                                <Label alignment="CENTER" prefWidth="80.0"
                                       text="x in m"/>
                                <TextField alignment="CENTER" prefWidth="150.0"
                                           fx:id="xLbl"/>
                            </HBox>
                            <HBox alignment="CENTER" spacing="5.0">
                                <Label alignment="CENTER" prefWidth="80.0"
                                       text="y in m"/>
                                <TextField fx:id="yLbl" alignment="CENTER"
                                           prefWidth="150.0"/>
                            </HBox>
                            <HBox alignment="CENTER" spacing="5.0">
                                <Label alignment="CENTER" prefWidth="80.0"
                                       text="z in m"/>
                                <TextField fx:id="zLbl" alignment="CENTER"
                                           prefWidth="150.0"/>
                            </HBox>
                        </VBox>
                    </AnchorPane>
                </Tab>
                <Tab fx:id="volumeTab" text="volume">
                    <AnchorPane>
                        <HBox alignment="CENTER" spacing="5.0">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <Label alignment="CENTER" text="volume in m3"/>
                            <TextField fx:id="volumeLbl" alignment="CENTER"
                                       prefWidth="150.0"/>
                        </HBox>
                    </AnchorPane>
                </Tab>
            </TabPane>
            <ButtonBar>
                <buttons>
                    <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#saveBtnAction" text="Save"/>
                    <Button fx:id="closeBtn" layoutX="185.0" layoutY="17.0" mnemonicParsing="false"
                            onAction="#closeBtnAction" text="Close"/>
                </buttons>
            </ButtonBar>
        </VBox>
    </AnchorPane>
</TitledPane>
